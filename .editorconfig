# top-most EditorConfig file
root = true

# Java files
[*.java]
indent_style = space
indent_size = 4
tab_width = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

# XML files (like pom.xml, config, etc.)
[*.xml]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
insert_final_newline = true

# Properties files (application.properties/yml)
[*.{properties,yml,yaml}]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Markdown / text
[*.md]
trim_trailing_whitespace = false
insert_final_newline = true
charset = utf-8